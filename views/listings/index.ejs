<% layout('layouts/boilerplate') %>

<style>
     .filters{
      display: flex;
      flex-wrap: wrap;
      margin-bottom: 4px;
     }
     .filter{
      text-align: center;
      margin-right: 1rem;
      opacity: 0.7;
     }
     .filter:hover{
      text-align: center;
      margin-right: 1rem;
      opacity: 1;
     }
     .filter p {
  font-size: 14px;
  margin-top: 6px;
  text-align: center;
}

   .gst{
    display: none;
   }
   .tax-toggle{
    border:1px solid black;
    border-radius: 1rem;
    height:3.5rem;
    padding: 1rem;
    width: 18rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
    
   }

</style>


    
<div class="filters mt-2">

  <div class="filter mt-2">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-city"></i></div>
    <p>Iconic cities</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-chess-rook"></i></div>
    <p>Castles</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-water-ladder"></i></div>
    <p>Amazing Pools</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>

  <div class="filter mt-2">
    <div><i class="fa-solid fa-snowflake"></i></div>
    <p>Arctic</p>
  </div>
    <div class="tax-toggle">
<div class="form-check-reverse form-switch ">
  <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" role="switch">
  <label class="form-check-label" for="flexSwitchCheckDefault">
    Display total after taxes
  </label>
</div>
</div>

</div>

   
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
    <% for(let list of alllistings) {%>
 <a href="/listings/<%=list._id%>" class="listing-link">
  <div class="card col list-card" >
  <img src="<%=list.image.url %>" class="card-img-top " alt="listing_image" style="height: 20rem">
  <div class="card-img-overlay">
    <h5 class="card-title">Card title</h5>
    
    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
    <p class="card-text"><small>Last updated 3 mins ago</small></p>
  </div>
  <div class="card-body">
    <p class="card-text"><b><%=list.title%></b> <br>&#8377;<%=list.price.toLocaleString("en-IN") %>/ night</p>
    <p class="gst"> &nbsp; +18% GST</p>
  </div>
</div>
</a>
 <%}%>
 </div>

 <script>
   let ToggleBtn=document.getElementById("flexSwitchCheckDefault");
   ToggleBtn.addEventListener("click",()=>{
    let gst=document.getElementsByClassName("gst")
    for(info of gst){
      if( info.style.display!=="inline"){
    info.style.display="inline"
      }else{
         info.style.display="none"
      }
    }

   })
 </script>

   
